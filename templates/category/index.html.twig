{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}

    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': category.id}) }}" class="btn btn-info">Détails</a>
                    <a href="{{ path('article_edit', {'id': category.id}) }}" class="btn btn-warning">Modifier</a>
                    {{ include('category/_delete.html.twig') }}


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune catégorie n'a été trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Ajouter une catégorie</a>
{% endblock %}
